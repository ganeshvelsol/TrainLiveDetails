<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:id="@+id/liner_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="2">
        <TextView
            android:text=" Train Name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:textColor="#426"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/train_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:textColor="#426"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="2">
        <TextView
            android:text="from Station"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:textColor="#426"
            android:layout_weight="1" />
       <TextView
           android:id="@+id/from_station"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:textSize="15sp"
           android:fontFamily="serif"
           android:textColor="#426"
           android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="2">
        <TextView
            android:text="to Station"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:textColor="#426"
            android:layout_weight="1" />
       <TextView
           android:id="@+id/to_station"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:textSize="15sp"
           android:fontFamily="serif"
           android:textColor="#426"
           android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="2">
        <TextView
            android:text="Duration"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:textColor="#426"
            android:layout_weight="1" />
       <TextView
           android:id="@+id/travel_time"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:textSize="15sp"
           android:fontFamily="serif"
           android:textColor="#426"
           android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="2">
        <TextView
            android:text="Train Number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:textColor="#426"
            android:layout_weight="1" />
       <TextView
           android:id="@+id/train_number"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:textSize="15sp"
           android:fontFamily="serif"
           android:textColor="#426"
           android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="2">
        <TextView
            android:text="Arrival Time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:textColor="#426"
            android:layout_weight="1" />
       <TextView
           android:id="@+id/arrival_time"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:textSize="15sp"
           android:fontFamily="serif"
           android:textColor="#426"
           android:layout_weight="1" />
    </LinearLayout>
    <TextView
        android:id="@+id/visible_days"
        android:text="More onfo...."
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="right"
        android:textColor="#f4bc2727"
        android:layout_gravity="right"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#100"/>
</LinearLayout>