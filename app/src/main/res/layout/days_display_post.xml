                android:layout_marginLeft="15dp"
                android:textColor="#426"
                android:fontFamily="serif"/>
            <TextView
                android:id="@+id/table_col4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
