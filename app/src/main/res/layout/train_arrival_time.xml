<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">
        <Spinner
            android:id="@+id/select_station_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </Spinner>
        <Spinner
            android:id="@+id/spinner_hours"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
        </Spinner>
        <Button
            android:id="@+id/serarch_button"
            android:text="search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:layout_weight="0.5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:text="Total Trains Are"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#426"
            android:fontFamily="serif"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/total_trains"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#426"
            android:fontFamily="serif"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/train_arrival_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
<include layout="@layout/data_empty_layout"
    android:id="@+id/data_empty_layout"
    android:visibility="gone"/>
    <include layout="@layout/data_loading"
        android:id="@+id/data_loading_screen_layout"
        android:visibility="gone"/>
</RelativeLayout>