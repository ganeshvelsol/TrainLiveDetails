<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="7dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="Train Number"
            android:textColor="#426"
            android:textSize="16sp" />
        <TextView
           android:id="@+id/train_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:textColor="#426"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="7dp"
        android:weightSum="2">
        <TextView
            android:text="Schedule arrivel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#426"
            android:textSize="16sp"
            android:layout_weight="1"/>
        <TextView
           android:id="@+id/sch_arrival"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#426"
            android:textSize="16sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="7dp"
        android:weightSum="2">
        <TextView
            android:text="Actual arrivel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#426"
            android:textSize="16sp"
            android:layout_weight="1"/>
        <TextView
           android:id="@+id/acctl_arrival"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#426"
            android:textSize="16sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="7dp"
        android:weightSum="2">
        <TextView
            android:text="Scehdule departure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#426"
            android:textSize="16sp"
            android:layout_weight="1"/>
        <TextView
           android:id="@+id/sch_departure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#426"
            android:textSize="16sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="7dp"
        android:weightSum="2">
        <TextView
            android:text="train Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#426"
            android:textSize="16sp"
            android:layout_weight="1"/>
        <TextView
           android:id="@+id/train_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#426"
            android:textSize="16sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="7dp"
        android:weightSum="2">
        <TextView
            android:text="Actual Departure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#426"
            android:textSize="16sp"
            android:layout_weight="1"/>
        <TextView
           android:id="@+id/actl_departure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#426"
            android:textSize="16sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="7dp"
        android:weightSum="2">
        <TextView
            android:text="Delay Arrival"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#426"
            android:textSize="16sp"
            android:layout_weight="1"/>
        <TextView
           android:id="@+id/delay_arrival"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#426"
            android:textSize="16sp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:text="Delay Departure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#426"
            android:textSize="16sp"
            android:layout_weight="1"/>
        <TextView
           android:id="@+id/delay_departure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#426"
            android:textSize="16sp"
            android:layout_weight="1"/>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:background="#de115566"/>
</LinearLayout>